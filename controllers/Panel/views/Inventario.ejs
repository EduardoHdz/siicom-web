<body>
<% include ../views/Secciones/menu %>
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">	

  <div  class="contact-box center-version">
    <div class="row">
			<div class="col-sm-12">
        <h1 class="page-header">Información de inventario</h1>
      </div>
		</div><!--/.row-->
    </div>


  <div class="ibox-content">
     <div class="col-md-2">
          <form action="/inventario" method="post" class="form-horizontal">

            <div class="form-group">
              <label for="Usuario" control-label">Usuario</label>
             <input type="text" id="Usuario" name="Usuario" placeholder="Usuario" class="form-control" required="">
            </div>

             <div class="form-group">
              <label for="PassEquip" control-label">Contraseña equipo</label>
             <input type="text" id="PassEquip" name="PassEquip" placeholder="Contraseña del equipo" class="form-control" required="">
            </div>

             <div class="form-group">
              <label for="NombreEquip" control-label">Nombre equipo</label>
             <input type="text" id="NombreEquip" name="NombreEquip" placeholder="Nombre del equipo" class="form-control" required="">
            </div>

             <div class="form-group">
              <label for="MAC" control-label">MAC</label>
             <input type="text" id="MAC" name="MAC" placeholder="Dirección MAC" class="form-control" required="">
            </div>

             <div class="form-group">
              <label for="IPEquip" control-label">IP Equipo</label>
             <input type="text" id="IPEquip" data-mask="999.999.999.999" name="IPEquip" placeholder="255.255.255.255" class="form-control" required="">
            </div>

             <div class="form-group">
              <label for="SO" control-label">Sistema operativo</label>
             <input type="text" id="SO" name="SO" placeholder="Sistema operativo" class="form-control" required="">
            </div>

             <div class="form-group">
              <label for="Marca" control-label">Marca</label>
             <input type="text" id="Marca" name="Marca" placeholder="Marca" class="form-control" required="">
            </div>

             <div class="form-group">
              <label for="Modelo" control-label">Modelo</label>
             <input type="text" id="Modelo" name="Modelo" placeholder="Modelo" class="form-control" required="">
            </div>

             <div class="form-group">
              <label for="Procesador" control-label">Procesador</label>
             <input type="text" id="Procesador" name="Procesador" placeholder="Procesador" class="form-control" required="">
            </div>

             <div class="form-group">
              <label for="RAM" control-label">Cantidad de RAM</label>
             <input type="number" id="RAM" name="RAM" placeholder="0" class="form-control" required="">
            </div>

             <div class="form-group">
              <label for="HDD" control-label">Cantidad de HDD</label>
             <input type="number" id="HDD" name="HDD" placeholder="0" class="form-control" required="">
            </div>

            <div class="form-group">
            <label for="Estado" control-label"> Estado</label>
             <select id="Estado" name="Estado" class="form-control" required="">
                <option value=""> Seleccione...</option>
                <option value="Malo"> Malo</option>
                <option value="Regular"> Regular</option>
                <option value="Bueno"> Bueno</option>
                <option value="Excelente"> Excelente</option>
             </select>
            </div>
             
              <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Agregar al inventario</button>
              </div>
          </form>
    </div>

    <div class="col-md-10">
        <fieldset>
        <legend> Registros en inventario</legend>
          <div class="scroll">
            <input type="text" class="form-control input-sm m-b-xs" id="filter" placeholder="Buscar ...">
              <table class="footable table table-stripped" data-filter="#filter" data-page-size="5" id="informacion">
                <thead>
                  <tr>
                   <th nowrap>ID Inventario</th>
                   <th nowrap>Usuario</th>
                   <th nowrap>Contraseña equipo</th>
                   <th nowrap>Nombre Equipo</th>
                   <th nowrap>MAC</th>
                   <th nowrap>IP Equipo</th>
                   <th nowrap>S.O.</th>
                   <th nowrap>Marca</th>
                   <th nowrap>Modelo</th>
                   <th nowrap>Procesador</th>
                   <th nowrap>RAM</th>
                   <th nowrap>HDD</th>
                   <th nowrap>Estado</th>
                   <th nowrap>Opciones</th>
                  </tr>
                </thead>
                <tbody class="Table">
                </tbody>
                <tfoot>
                  <tr>
                    <td colspan="11">
                      <ul class="pagination pull-right"></ul>
                    </td>
                  </tr>
                </tfoot>
              </table>
            </div>
        </fieldset>
     </div>
  </div>

