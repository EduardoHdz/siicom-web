  <script>
    $(document).ready(function(){
      
      $("#item6").addClass("active");

      $.ajax({
        url: "/infoInv",
        Type: "GET",
        success: function(result){
          if(result==0){
              }else{

                for (var i = 0; i <= result.length; i++) {
                        // put select items here

                          var row = $("<tr>");

                        $('.Table').append(row); 
                        row.append($("<td>" + result[i].idInventario + "</td>"));
                        row.append($("<td>" + result[i].Usuario + "</td>"));  
                        row.append($("<td>" + result[i].PassEquip + "</td>"));
                        row.append($("<td>" + result[i].NombreEquip + "</td>"));
                        row.append($("<td>"+ result[i].MAC + "</td>"));
                        row.append($("<td>"+ result[i].IPEquip + "</td>"));
                        row.append($("<td>"+ result[i].SO + "</td>"));
                        row.append($("<td>" + result[i].Marca + "</td>"));
                        row.append($("<td>" + result[i].Modelo + "</td>"));
                        row.append($("<td>" + result[i].Procesador + "</td>"));
                        row.append($("<td>" + result[i].RAM + " GB "+ "</td>"));
                        row.append($("<td>" + result[i].HDD + " GB "+ "</td>"));
                        row.append($("<td>" + result[i].Estado + "</td>"));
                        row.append($("<td >" +" &nbsp; " + "<button onclick=editarInv("+result[i].idInventario+") class='widget-icon'><i class='fa fa-edit text-navy'></i></button>" + " &nbsp; " + "<button class='widget-icon' id='Opcion2' onclick=delInv("+result[i].idInventario+")><i class='fa fa-trash text-navy'></i></button>" + "</td>"));
                        $('.footable').attr("data-page-size","5");
                      }
              }
            }

            });
    });

     function editarInv(id) {
         $('#editServ').modal();
         $.ajax({
             url: "/editInventario/" + id + "",
             type: "GET",
             success: function (result) {
                 $('#Usuario1').val(result[0].Usuario);
                 $('#PassEquip1').val(result[0].PassEquip);
                 $('#NombreEquip1').val(result[0].NombreEquip);
                 $('#MAC1').val(result[0].MAC);
                 $('#IPEquip1').val(result[0].IPEquip);
                 $('#SO1').val(result[0].SO);
                 $('#Marca1').val(result[0].Marca);
                 $('#Modelo1').val(result[0].Modelo);
                 $('#Procesador1').val(result[0].Procesador);
                 $('#RAM1').val(result[0].RAM);
                 $('#HDD1').val(result[0].HDD);
                 $('#Estado1').val(result[0].Estado);
                 $('#id').val(result[0].idInventario);
             }, error: function (result) {

             }

         });
     }

      function delInv(id) {
          swal({
            title: "¿Estás seguro?",
            text: "¡No podrás recuperar el registro!",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "Si, dale cuello!",
            closeOnConfirm: false
          }, function () {
                swal("Eliminado!", "El registro ha sido eliminado.", "success", setTimeout(function() { 
                  $.ajax({
                 url: "/delInv/" + id + "",
                 type: "GET",
                 success: function (result) {
                    if(result = "done"){
                      location.reload();
                    }else{
                      alert("Ocurrio un error: "+ result);
                    }
                 }, error: function (result) {
                    alert(result);
                 }
                  });

                }, 1200));
         });
     }
</script>
