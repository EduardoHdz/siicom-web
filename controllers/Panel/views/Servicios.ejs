<!DOCTYPE html>
<html lang="es">
<head>
<% include ../views/Secciones/head %>
	<title>SIICOM-MX | Servicios</title>
	<% include ../views/Secciones/header %>
  <script>
      window.onload = function() {
        window.addEventListener('mousemove', function(){$('.footable').footable()});
      }
    </script>
</head>
<body>
<% include ../views/Secciones/menu %>
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">	

  <div  class="contact-box center-version">
    <div class="row">
			<div class="col-sm-12">
        <h1 class="page-header">Realizar servicio</h1>
      </div>
		</div><!--/.row-->
    </div>


  <div class="ibox-content">
     <div class="col-md-2">
          <form action="/Serv" method="post" class="form-horizontal">

            <div class="form-group">
              <label for="idTecnico" control-label">Técnico</label>
              <SELECT class="form-control" id="idTecnico" name="idTecnico" required="">
              </SELECT> 
            </div>

            <div class="form-group">
             <label for="idTipoServ">Tipo de servicio</label>
              <SELECT class="form-control" id="idTipoServ" name="idTipoServicio" required="">
              </SELECT> 
            </div>

            <div class="form-group">
              <label for="idUsuario">Usuario</label>
              <SELECT class="form-control" id="idUsuario" name="idUsuario" required="">
              </SELECT> 
            </div>

            <div class="form-group">
              <label for="Problema">Problema</label>
              <input type="text" id="Problema" name="Problema" placeholder="Problema" class="form-control" required="">
            </div>

            <div class="form-group">
              <label for="Observaciones">Observaciones</label>
              <input type="text" id="Observaciones" placeholder="Observaciones" name="Observaciones" class="form-control" required="">
            </div>

            <div class="form-group">
              <label for="Estado">Estado</label>
              <SELECT class="form-control" id="Estado" name="Estatus" required="">
              <option value="Pendiente"> Pendiente</option>
              </SELECT> 
            </div>
             
              <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Registrar servicio</button>
              </div>
          </form>
    </div>

    <div class="col-md-10">
        <fieldset>
        <legend> Actividades sin completar</legend>
          <div class="scroll">
            <input type="text" class="form-control input-sm m-b-xs" id="filter" placeholder="Buscar ...">
              <table class="footable table table-stripped" data-filter="#filter" data-page-size="5" id="informacion">
                <thead>
                  <tr>
                   <th nowrap>ID Servicio</th>
                   <th nowrap>Tipo servicio</th>
                   <th nowrap>Técnico</th>
                   <th nowrap>Usuario</th>
                   <th nowrap>Problema</th>
                   <th nowrap>Observaciones</th>
                   <th nowrap>Estado</th>
                   <th nowrap>Fecha</th>
                   <th nowrap>Opciones</th>
                  </tr>
                </thead>
                <tbody class="Table">
                </tbody>
                <tfoot>
                  <tr>
                    <td colspan="11">
                      <ul class="pagination pull-right"></ul>
                    </td>
                  </tr>
                </tfoot>
              </table>
            </div>
        </fieldset>
     </div>

     <div class="col-md-10">
        <fieldset>
        <legend> Actividades completadas</legend>
          <div class="scroll">
            <input type="text" class="form-control input-sm m-b-xs" id="filter2" placeholder="Buscar ...">
              <table class="footable table table-stripped" data-filter="#filter2" data-page-size="5" id="informacion">
                <thead>
                  <tr>
                   <th nowrap>ID </th>
                   <th nowrap>ID Servicio</th>
                   <th nowrap>Problema</th>
                   <th nowrap>Observaciones</th>
                   <th nowrap>Estado</th>
                   <th nowrap>Fecha</th>
                  </tr>
                </thead>
                <tbody class="Table2">
                </tbody>
                <tfoot>
                  <tr>
                    <td colspan="11">
                      <ul class="pagination pull-right"></ul>
                    </td>
                  </tr>
                </tfoot>
              </table>
            </div>
        </fieldset>
     </div>
  </div>

  <!--ACTUALIZAR SERVICIO-->
  <div class="modal inmodal" id="editServ" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content animated bounceIn">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title">Actualizar Servicio</h4>
        </div>
          <div class="modal-body">
            <form action="/upServ" method="post" name="info_form">
                <div class="modal-body clearfix">
                    <div class="controls">
                         <div class="form-group">
                            <label for="idTecnico1 control-label">Técnico</label>
                            <SELECT class="form-control" id="idTecnico1" name="idTecnico" required="">
                            </SELECT> 
                          </div>

                          <div class="form-group">
                           <label for="idTipoServ1">Tipo de servicio</label>
                            <SELECT class="form-control" id="idTipoServ1" name="idTipoServicio" required="">
                            </SELECT> 
                          </div>

                          <div class="form-group">
                            <label for="idUsuario1">Usuario</label>
                            <SELECT class="form-control" id="idUsuario1" name="idUsuario" required="">
                            </SELECT> 
                          </div>

                          <div class="form-group">
                            <label for="Problema1">Problema</label>
                            <input type="text" id="Problema1" name="Problema" class="form-control" required="">
                          </div>

                          <div class="form-group">
                            <label for="Observaciones1">Observaciones</label>
                            <input type="text" id="Observaciones1" name="Observaciones" class="form-control" required="">
                          </div>

                          <div class="form-group">
                            <label for="Estado1">Estado</label>
                            <input type="text" id="Estado1" name="Estatus" class="form-control" required="" readonly="">
                          </div>
                        <input type="hidden" class="form-control" id="id" name="idServicio" required="" >
                        </div>
                    </div>
                    <div class="modal-footer">
                  <button type="submit" class="btn btn-primary">Actualizar</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
</div>

	<% include ../views/Secciones/footer %>


	<script>
		
		$("#sub-item-1").collapse();
		$(document).ready(function(){
			
			$("#sub-item-Service").addClass("active");

			$.ajax({
        url: "/infoS",
        Type: "GET",
        success: function(result){
          if(result==0){
              }else{

                for (var i = 0; i <= result.length; i++) {
                        // put select items here

                          var row = $("<tr>");

                        $('.Table').append(row); 
                        row.append($("<td>" + result[i].idServicio + "</td>"));
                        row.append($("<td>" + result[i].idTipoServicio + "</td>"));  
                        row.append($("<td>" + result[i].idTécnico + "</td>"));
                        row.append($("<td>" + result[i].idUsuario + "</td>"));
                        row.append($("<td>"+ result[i].Problema + "</td>"));
                        row.append($("<td>"+ result[i].Observaciones + "</td>"));
                        row.append($("<td>"+ result[i].Estatus + "</td>"));
                        row.append($("<td>" + result[i].Fecha + "</td>"));
                        row.append($("<td >" +" &nbsp; " + "<button onclick=Done("+result[i].idServicio+") class='widget-icon'><i class='fa fa-check-square-o text-navy'></i></button>" +" &nbsp; " + "<button onclick=editarServ("+result[i].idServicio+") class='widget-icon'><i class='fa fa-edit text-navy'></i></button>" + " &nbsp; " + "<button class='widget-icon' id='Opcion2' onclick=delServ("+result[i].idServicio+")><i class='fa fa-trash text-navy'></i></button>" + "</td>"));
                        $('.footable').attr("data-page-size","5");
                      }
              }
            }

            });

      $.ajax({
				url: "/infoSD",
				Type: "GET",
				success: function(result){
					if(result==0){
			        }else{

			          for (var i = 0; i <= result.length; i++) {
                        // put select items here

                          var row = $("<tr>");

                        $('.Table2').append(row); 
                        row.append($("<td>" + result[i].idServDone + "</td>"));
                        row.append($("<td>" + result[i].idServicio + "</td>")); 
                        row.append($("<td>" + result[i].Problema + "</td>")); 
                        row.append($("<td>" + result[i].Observaciones + "</td>")); 
                        row.append($("<td>" + result[i].Estatus + "</td>"));  
                        row.append($("<td>" + result[i].Fecha + "</td>"));
                        $('.footable').attr("data-page-size","5");
                  		}
			        }
		        }

		        });


            $.ajax({
              url: "/infoTech",
              Type: "GET",
              success: function(result){
              for (var i = 0; i <= result.length; i++) {
                    $('#idTecnico').append( '<option value="'+result[i].idTécnico+'">'+result[i].Nombre+'</option>' );
                    $('#idTecnico1').append( '<option value="'+result[i].idTécnico+'">'+result[i].Nombre+'</option>' );
                
                    }
                  }
              });

            $.ajax({
              url: "/infoTS",
              Type: "GET",
              success: function(result){
                      for (var i = 0; i <= result.length; i++) {
                        $('#idTipoServ').append( '<option value="'+result[i].idTipoServicio+'">'+result[i].Nombre+'</option>' );
                        $('#idTipoServ1').append( '<option value="'+result[i].idTipoServicio+'">'+result[i].Nombre+'</option>' );
                      }
                   }
                });

            $.ajax({
              url: "/infouS",
              Type: "GET",
              success: function(result){
                      for (var i = 0; i <= result.length; i++) {
                        $('#idUsuario').append( '<option value="'+result[i].idUsuario+'">'+result[i].Nombre+'</option>' );
                        $('#idUsuario1').append( '<option value="'+result[i].idUsuario+'">'+result[i].Nombre+'</option>' );
                      }
                   }
                });
		});

     function editarServ(id) {
         $('#editServ').modal();
         $.ajax({
             url: "/editServ/" + id + "",
             type: "GET",
             success: function (result) {
                 $('#idTecnico1').val(result[0].idTécnico);
                 $('#idUsuario1').val(result[0].idUsuario);
                 $('#idTipoServ1').val(result[0].idTipoServicio);
                 $('#Problema1').val(result[0].Problema);
                 $('#Observaciones1').val(result[0].Observaciones);
                 $('#Estado1').val(result[0].Estatus);
                 $('#id').val(result[0].idServicio);
             }, error: function (result) {

             }

         });
     }

      function delServ(id) {
          swal({
            title: "¿Estás seguro?",
            text: "¡No podrás recuperar el registro!",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "Si, dale cuello!",
            closeOnConfirm: false
          }, function () {
                swal("Eliminado!", "El registro ha sido eliminado.", "success", setTimeout(function() { 
                  $.ajax({
                 url: "/delServ/" + id + "",
                 type: "GET",
                 success: function (result) {
                    if(result = "done"){
                      location.reload();
                    }else{
                      alert("Ocurrio un error: "+ result);
                    }
                 }, error: function (result) {
                    alert(result);
                 }
                  });

                }, 1200));
         });
     }

     function Done(id) {
       swal("¡Buen trabajo!", "¡La actividad ha sido completada!", "success", setTimeout(function() { 
         $.ajax({
             url: "/ServDone/" + id + "",
             type: "GET",
             success: function (result) {
                if(result = "done"){
                  location.reload();
                }else{
                  alert("Ocurrio un error: "+ result);
                }
             }, error: function (result) {
                alert(result[0].err);
             }
         });
      }, 2000));
     }
	</script>	
</body>
</html>