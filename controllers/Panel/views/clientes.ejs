<!DOCTYPE html>
<html>
<head>
<% include ../views/Secciones/head %>
	<title><%=title%></title>
	  <script>
      window.onload = function() {
        window.addEventListener('mousemove', function(){$('.footable').footable()});
      };
    </script>
    <style>
      .scroll {
        overflow-x: scroll;
        width: 100%;
      }

      .scroll table {
        width: 100%;
      }
      .table > thead > tr > th, td {
        vertical-align: middle !important;
        text-align: center;
      }

    </style>
</head>
<body>
<% include ../views/Secciones/menu %>
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">

<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Clientes</h1>
			</div>
		</div><!--/.row-->


    <div class="ibox-content" id="datos">
          <div class="scroll">
            <input type="text" class="form-control input-sm m-b-xs" id="filter" placeholder="Buscar ...">
              <table class="footable table table-stripped" data-filter="#filter" data-page-size="6" id="datos">
                <thead>
                  <tr>

                   <th nowrap>ID Cliente</th>
                   <th nowrap>Nombre</th>
                   <th nowrap>Dirección Ne Ni</th>
                   <th nowrap>Teléfono</th>
                   <th nowrap>RFC</th>
                   <th nowrap>Opciones</th>
                    
                  </tr>
                </thead>
                <tbody class="Table">
                  
                </tbody>
                <tfoot>
                  <tr>
                    <td colspan="11">
                      <ul class="pagination pull-right"></ul>
                    </td>
                  </tr>
                </tfoot>
              </table>
            </div>
     </div>
</div>

	<% include ../views/Secciones/footer %>
	<script>


		$(document).ready(function(){
			$("#item2").addClass("active");



			$.ajax({
				url: "/infoClients",
				Type: "GET",
				success: function(result){
					if(result==0){
			        }else{

			          for (var i = 0; i <= result.length; i++) {

			          	var row = $("<tr>")

			            $('.Table').append(row); // this will append tr element to table... keep its reference for a while since we will add cels into it
			            row.append($("<td>" + result[i].idCliente + "</td>"));
			            row.append($("<td>" + result[i].Nombre + "</td>"));
			            row.append($("<td>" + result[i].DireccionNeni + "</td>"));
			            row.append($("<td>"+ result[i].Tel + "</td>"));
			            row.append($("<td>"+ result[i].RFC + "</td>"));
			            row.append($("<td >" + "&nbsp; <a onclick=photoAni("+result[i].idClient+") class='widget-icon'><i class='fa fa-camera text-navy'></i></a>" + " &nbsp; " + "<a onclick=editarAni("+result[i].idClient+") class='widget-icon'><i class='fa fa-edit text-navy'></i></a>" + " &nbsp; " + "<a class='widget-icon' id='Opcion2' onclick=eliminar("+result[i].idClient+")><i class='fa fa-trash text-navy'></i></a>" + "</td>"));
			            }

			        }
		        }
		        });
		});
	</script>
	<script src="../js/plugins/footable/footable.all.min.js"></script>
</body>
</html>